<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="5dp">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Project Sales Order"
            android:textSize="30dp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Customer"
                android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:id="@+id/txtViewProjectCustomerName"
                android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Distributor"
                android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectDistributorName"
                android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vehicle"
                android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectVehicleNo"
                android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Driver"
                android:layout_weight="70"
                android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectDriverName"
                android:layout_weight="30"
                android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Driver NIC"
                android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectDriverNIC" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Delivery Date" android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectDeliveryDate" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="70"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Remarks" android:textSize="25dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/txtViewProjectRemarks" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="#4F82B4"
                android:text="Ordered Items"
                android:gravity="center"
                android:textSize="25dp" android:layout_weight="30"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/projectOrderDetailListView"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
    </ListView>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sync"
            android:textSize="25dp"
            android:id="@+id/btnProjectSync"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>