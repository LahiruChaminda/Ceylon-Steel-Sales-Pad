<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="4" android:padding="5dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="3">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Bank"
                android:gravity="center_vertical" android:layout_weight="1"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/bankCombo" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="3">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cheque No"
                android:gravity="center_vertical" android:layout_weight="1"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="Cheque No"
                android:id="@+id/inputChequeNo" android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="3">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Amount"
                android:gravity="center_vertical" android:layout_weight="1"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/inputAmount" android:layout_weight="2" android:inputType="numberDecimal" android:hint="Amount"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="3">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Realization Date"
                android:gravity="center_vertical" android:layout_weight="1"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="2" android:weightSum="3">
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/inputYear" android:layout_weight="1" android:hint="Year"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/inputMonth" android:layout_weight="1" android:hint="Month"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/inputDate" android:layout_weight="1" android:hint="Date"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="196dp" android:layout_gravity="right"
            android:layout_height="wrap_content" android:weightSum="2">
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Ok"
                android:id="@+id/btnOk" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cancel"
                android:id="@+id/btnCancel" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>