<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="7"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Outlet Name"
            android:id="@+id/txtOutletName"
            android:textSize="15dp" android:gravity="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Distributor Code"
            android:id="@+id/txtDistributorCode"
            android:textSize="15dp" android:gravity="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txtDate"
            android:textSize="15dp" android:gravity="center" android:text="Date"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txtItemName"
            android:layout_weight="1"
            android:textSize="15dp" android:gravity="center" android:text="Item Name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txtQuantity"
            android:textSize="15dp" android:gravity="center" android:text="Quantity"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txtUnit"
            android:textSize="15dp" android:gravity="center" android:text="Unit"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txtAmount"
            android:text="Amount"
            android:textSize="15dp" android:gravity="center"/>
</LinearLayout>