<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="10">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Retailer"
            android:id="@+id/txtRetailer" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="invoice No"
            android:id="@+id/txtInvoiceNo" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Invoice Date"
            android:id="@+id/txtInvoiceDate" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:id="@+id/txtPaymentMode" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment Date"
            android:id="@+id/txtPaymentDate" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cheque No"
            android:id="@+id/txtChequeNo" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bank"
            android:id="@+id/txtBank" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Banking Date"
            android:id="@+id/txtBankingDate" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:text="Amount"
            android:layout_height="wrap_content"
            android:id="@+id/txtAmount" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cheque Status"
            android:id="@+id/txtChequeStatus" android:layout_weight="1" android:gravity="center_horizontal" android:textSize="15dp"/>
</LinearLayout>