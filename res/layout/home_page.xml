<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_weight="1">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Make Sales Order"
                android:id="@+id/btnMakeSalesOrder" android:layout_margin="5dp" android:textSize="25dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View Sales Order"
                android:id="@+id/btnViewSalesOrder" android:layout_margin="5dp" android:textSize="25dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Attendence"
                android:id="@+id/btnAttendence" android:layout_margin="5dp" android:textSize="25dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Un Productive Call"
                android:id="@+id/btnUnProductiveCall" android:layout_margin="5dp" android:textSize="25dp"/>
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reload Data"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnReloadData" android:layout_margin="5dp" android:textSize="25dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnLogout" android:layout_margin="5dp" android:textSize="25dp"/>
</LinearLayout>