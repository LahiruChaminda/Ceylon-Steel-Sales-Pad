<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:weightSum="10">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:weightSum="2" android:layout_weight="9">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:baselineAligned="false" android:layout_weight="1" android:weightSum="3">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="From" android:layout_weight="1" android:textSize="20dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To" android:layout_weight="1" android:textSize="20dp"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Category" android:layout_weight="1" android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:layout_weight="1" android:weightSum="3">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="date"
                        android:id="@+id/inputFromDate" android:layout_weight="1" android:layout_gravity="center_vertical" android:textSize="20dp"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="date"
                        android:id="@+id/inputToDate" android:layout_weight="1" android:layout_gravity="center_vertical" android:textSize="20dp"/>
                <AutoCompleteTextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/categoryAuto"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Search"
                android:id="@+id/btnSearch" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#ff8cfffd">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Outlet Name"
                android:textSize="15dp" android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Invoice No"
                android:textSize="15dp" android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp" android:gravity="center" android:text="Date"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp" android:gravity="center" android:text="Item Name"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp" android:gravity="center" android:text="Quantity"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp" android:gravity="center" android:text="Unit"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount"
                android:textSize="15dp" android:gravity="center"/>
    </LinearLayout>
    <ListView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/listOfSales"
              tools:listitem="@layout/outlet_wise_sale_item"></ListView>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#ffbeeeff">
        <Space
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtTotalQuantity"
                android:textSize="20dp" android:gravity="center" android:text="Quantity"/>
        <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount"
                android:id="@+id/txtTotalAmount"
                android:textSize="20dp" android:gravity="center"/>
    </LinearLayout>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btnReturnToHome" android:text="Back to Home"
            android:textSize="25dp"/>
</LinearLayout>