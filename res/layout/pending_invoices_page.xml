<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Outlet Name"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="25dp"/>
        <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/outletAuto"
                android:layout_weight="3"
                android:textSize="25dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pending Invoices"
            android:layout_gravity="center_horizontal"
            android:gravity="center" android:textSize="25dp" android:background="#ffe6e6e6"/>
    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/invoiceList" android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#ffe6e6e6" android:baselineAligned="false" android:weightSum="100" android:padding="5dp">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
                  android:text="Payment" android:layout_gravity="center_horizontal" android:gravity="center" android:textSize="25dp"
                  android:layout_weight="80"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:id="@+id/btnAddCashPayment" android:gravity="center" android:layout_weight="10"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cheque"
                android:id="@+id/btnAddChequePayment" android:gravity="center" android:layout_weight="10"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/paymentList">
    </LinearLayout>
</LinearLayout>