<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:padding="5dp">
    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/categoryExpandableListView"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish Make Bill"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnFinishMakeBill"
            android:textSize="25dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync Order"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnQuickSync"
            android:textSize="25dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return To Home"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnReturnToHome"
            android:textSize="25dp"/>
</LinearLayout>