<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="10">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9.36">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" android:weightSum="100">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Invoice No"
                            android:layout_weight="72.62"
                            android:id="@+id/txtInvoiceNo" android:textSize="25dp" android:gravity="center_vertical"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Total"
                            android:layout_weight="28.99"
                            android:id="@+id/txtTotal" android:textSize="25dp" android:gravity="center_vertical"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:textSize="20dp"
                        android:gravity="right"
                        android:text="Monday, 18 June, 2014"
                        android:id="@+id/textView"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.56"
                android:id="@+id/checkBox"/>
    </LinearLayout>
</LinearLayout>